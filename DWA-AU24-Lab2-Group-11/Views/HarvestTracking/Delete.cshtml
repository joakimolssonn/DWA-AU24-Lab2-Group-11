@model DWA_AU24_Lab2_Group_11.Models.HarvestTracking

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Harvest Tracking</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Harvest Tracking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlantingSchedule.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlantingSchedule.Id)
        </dd>
        <dt class="col-sm-2">
            Crop Name
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.Crop?.Name
        </dd>
        <dt class="col-sm-2">
            Planting Date
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.PlantingDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Expected Harvest Date
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.ExpectedHarvestDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Harvest Date
        </dt>
        <dd class="col-sm-10">
            @if (Model.HarvestDate.HasValue)
            {
                <span>@Model.HarvestDate.Value.ToString("yyyy-MM-dd HH:mm")</span>
            }
            else
            {
                <span class="text-warning">Not harvested yet</span>
            }
        </dd>
    </dl>

    <!-- Delete confirmation form -->
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
