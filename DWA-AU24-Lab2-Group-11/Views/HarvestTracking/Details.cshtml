@model DWA_AU24_Lab2_Group_11.Models.HarvestTracking

@{
    ViewData["Title"] = "Harvest Details";
}

<h1>Harvest Details</h1>

<div>
    <h4>Harvest Tracking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Planting Schedule ID
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.Id
        </dd>
        <dt class="col-sm-2">
            Crop Name
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.Crop?.Name
        </dd>
        <dt class="col-sm-2">
            Planting Date
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.PlantingDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Expected Harvest Date
        </dt>
        <dd class="col-sm-10">
            @Model.PlantingSchedule.ExpectedHarvestDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Countdown to Harvest (Days)
        </dt>
        <dd class="col-sm-10">
            @(Model.PlantingSchedule.ExpectedHarvestDate.HasValue
                ? (Model.PlantingSchedule.ExpectedHarvestDate.Value - DateTime.Now).Days
                : "N/A")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>