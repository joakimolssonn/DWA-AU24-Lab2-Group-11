@model IEnumerable<DWA_AU24_Lab2_Group_11.Models.Notification>

@{
    ViewData["Title"] = "Home";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>Notifications</h2>

    @if (Model.Any())  
    {
        <ul>
            @foreach (var notification in Model)
            {
                <li>
                    <p>@notification.Message</p>
                    <p><strong>Notification Date:</strong> @notification.NotificationDate.ToString("f")</p>

                    <!-- Mark as Read Button -->
                    <form method="post" action="@Url.Action("MarkAsRead", "Home", new { id = notification.Id })">
                        <button type="submit">Mark as Read</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No new notifications.</p>
    }
</div>
