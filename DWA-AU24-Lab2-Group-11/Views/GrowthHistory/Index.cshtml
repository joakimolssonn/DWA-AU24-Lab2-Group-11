@model IEnumerable<DWA_AU24_Lab2_Group_11.Models.GrowthHistory>

@{
    ViewData["Title"] = "Growth History";
}

<h1>Growth History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Crop Name</th>
            <th>Planting Date</th>
            <th>Harvest Date</th>
            <th>Days</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CropName</td>
                <td>@item.PlantingDate.ToShortDateString()</td>
                <td>@item.HarvestDate.ToShortDateString()</td>
                <td>@item.DaysBetween</td>
                <td>
                    <!-- Textarea for Notes -->
                    <textarea class="form-control" rows="3" readonly>@item.Notes</textarea>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Growth History</a>
